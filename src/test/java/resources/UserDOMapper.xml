<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.apache.ibatis.helloworld.dao.UserDOMapper">
  <!--    <cache-ref namespace="com.someone.application.data.SomeMapper"/>-->
  <resultMap id="BaseResultMap" type="org.apache.ibatis.helloworld.pojo.UserDO">
    <id column="id" jdbcType="INTEGER" property="id"/>
    <result column="name" jdbcType="VARCHAR" property="name"/>
    <result column="age" jdbcType="INTEGER" property="age"/>
    <result column="telphone" jdbcType="VARCHAR" property="telphone"/>
    <result column="register_mode" jdbcType="VARCHAR" property="registerMode"/>
    <result column="third_party_id" jdbcType="VARCHAR" property="thirdPartyId"/>
  </resultMap>
  <sql id="Base_Column_List">
        id, name, age, telphone, register_mode, third_party_id
    </sql>

  <select id="selectByPhone" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from user where telphone = #{telphone}
  </select>
  <select id="selectByPhoneOrName" resultType="org.apache.ibatis.helloworld.pojo.UserDO">
    select
    <include refid="Base_Column_List"/>
    from user where telphone = #{telphone}
    <if test="name != null and name !=''">
      AND name = #{name}
    </if>
  </select>


  <select id="selectByPhoneAndAge" resultType="org.apache.ibatis.helloworld.pojo.UserDO">
    select
    <include refid="Base_Column_List"/>
    from user where telphone = %{telphone}
    and age = #{age}
  </select>

  <select id="selectByPhoneAsList" resultType="org.apache.ibatis.helloworld.pojo.UserDO">
    select
    <include refid="Base_Column_List"/>
    from user where telphone = #{telphone}
  </select>


  <select id="selectByPhoneAsMaps" resultType="java.util.Map">
    select
    <include refid="Base_Column_List"/>
    from user where telphone = #{telphone}
  </select>
  <select id="selectByPhoneAsMap" resultType="java.util.Map">
    select
    <include refid="Base_Column_List"/>
    from user where telphone = #{telphone}
  </select>

</mapper>
